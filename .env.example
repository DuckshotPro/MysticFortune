# ==================================
# MysticFortune Environment Template
# ==================================
# Copy this file to .env and fill in your values
# DO NOT commit the actual .env file to version control!

# ==================================
# DATABASE CONFIGURATION (Required)
# ==================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Example: postgresql://mysticfortune:mypassword@localhost:5432/mysticfortune_dev
DATABASE_URL=postgresql://username:password@localhost:5432/mysticfortune_dev

# ==================================
# SESSION CONFIGURATION (Required)
# ==================================
# Generate with: openssl rand -base64 32
# This should be a long random string for security
SESSION_SECRET=your_random_session_secret_here_change_this

# ==================================
# APPLICATION CONFIGURATION
# ==================================
# Environment: development, production, or test
NODE_ENV=production

# Port the application runs on (default: 5000)
PORT=5000

# Full URL where the application is hosted
# Used for redirects and absolute URLs
APP_URL=https://dev.website.com

# ==================================
# AI FEATURES (Optional)
# ==================================
# Hugging Face API key for AI-powered fortune generation
# Get your key at: https://huggingface.co/settings/tokens
# Leave empty to use basic fortune generation without AI
HUGGINGFACE_API_KEY=

# ==================================
# PAYMENT INTEGRATION (Optional)
# ==================================
# Stripe API keys for payment processing
# Get keys at: https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_...) for development
# Use live keys (sk_live_...) for production
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# ==================================
# EMAIL CONFIGURATION (Optional)
# ==================================
# SMTP settings for sending emails
# Leave empty if not using email features
SMTP_HOST=mail.crypt-ai-lytics.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=support@crypt-ai-lytics.com
SMTP_PASSWORD=b3b29a5934de3bf9672bdd82
SMTP_FROM_EMAIL=noreply@mysticfortune.com
SMTP_FROM_NAME=Mystic Fortune

# ==================================
# ANALYTICS & MONITORING (Optional)
# ==================================
# Google Analytics tracking ID
GA_TRACKING_ID=

# Sentry DSN for error tracking
SENTRY_DSN=

# ==================================
# SECURITY SETTINGS (Optional)
# ==================================
# CORS allowed origins (comma-separated)
# Example: https://website.com,https://www.website.com
CORS_ORIGINS=https://dev.website.com

# Rate limiting: Maximum requests per 15 minutes
RATE_LIMIT_MAX=100

# ==================================
# CACHE CONFIGURATION (Optional)
# ==================================
# Redis connection string for caching (if using Redis)
# Format: redis://[:password@]host:port/database
# Leave empty to use in-memory caching
REDIS_URL=

# ==================================
# LOGGING (Optional)
# ==================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable request logging
LOG_REQUESTS=true

# ==================================
# DEVELOPMENT ONLY
# ==================================
# These should only be set in development
# NEVER set these to true in production!

# Enable debug mode
DEBUG=false

# Bypass authentication (development only)
BYPASS_AUTH=false
